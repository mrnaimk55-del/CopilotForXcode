        <a href="#" class="logo">The Local Shop</a>
        <div class="cart-icon-wrapper" onclick="toggleCart()">
            <i class="fas fa-shopping-cart"></i>
            <span class="cart-badge" id="cart-badge">0</span>
        </div>
    </header>

    <section class="hero" id="home">
        <h1>The Local Shop</h1>
        <p>Fresh Finds, Best Prices</p>
        <a href="#products" class="btn">Shop Now</a>
    </section>

    <section class="products-section" id="products">
        <h2 class="section-title">Our Products</h2>
        <div class="carousel-container" id="carousel">
            </div>
    </section>

    <a href="https://wa.me/6356823383" target="_blank" class="whatsapp-float" aria-label="Chat on WhatsApp">
        <i class="fab fa-whatsapp"></i>
    </a>

    <div class="cart-overlay" id="cart-overlay">
        <div class="cart-drawer">
            <div class="cart-header">
                <h2>Your Cart</h2>
                <button class="close-cart" onclick="toggleCart()"><i class="fas fa-times"></i></button>
            </div>
            
            <div class="cart-items-container" id="cart-items">
                </div>

            <div class="cart-total-section">
                <span>Total:</span>
                <span id="cart-total">$0.00</span>
            </div>

            <form class="checkout-form" id="checkout-form">
                <input type="text" id="customer-name" placeholder="Full Name" required>
                <input type="tel" id="customer-phone" placeholder="Phone Number" required>
                <button type="submit" class="btn">Send Order</button>
            </form>
        </div>
    </div>

    <script>
        // Store Email Data
        const OWNER_EMAIL = "mrnaimk55@gmail.com";

        // Product Data
        const productsData = [
            {
                id: 1,
                name: "Fresh Produce Box",
                price: 24.99,
                img: "https://i.ibb.co/YTJL5v31/IMG-1586.jpg"
            },
            {
                id: 2,
                name: "Premium Selection",
                price: 39.50,
                img: "https://i.ibb.co/KjC1ZXLH/e78f6e4a-2e47-422f-8417-75ca05bb12f1.jpg"
            }
        ];

        let cart = [];

        // Initialize Shop
        function initApp() {
            const carousel = document.getElementById('carousel');
            
            // Render Products
            productsData.forEach(product => {
                const card = document.createElement('div');
                card.className = 'product-card';
                card.innerHTML = `
                    <img src="${product.img}" alt="${product.name}">
                    <div class="product-info">
                        <h3>${product.name}</h3>
                        <p>$${product.price.toFixed(2)}</p>
                        <button class="btn" onclick="addToCart(${product.id})">Add to Cart</button>
                    </div>
                `;
                carousel.appendChild(card);
            });
        }

        // Add item to cart
        function addToCart(id) {
            const product = productsData.find(p => p.id === id);
            const existingItem = cart.find(item => item.id === id);

            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({ ...product, quantity: 1 });
            }
            
            updateCartUI();
            
            // Visual feedback (Open cart momentarily)
            toggleCart(true);
        }

        // Update Cart UI
        function updateCartUI() {
            const cartItemsContainer = document.getElementById('cart-items');
            const cartBadge = document.getElementById('cart-badge');
            const cartTotal = document.getElementById('cart-total');
            
            cartItemsContainer.innerHTML = '';
            let total = 0;
            let itemCount = 0;

            if (cart.length === 0) {
                cartItemsContainer.innerHTML = '<p style="text-align:center; color:#7f8c8d; margin-top:20px;">Your cart is empty.</p>';
            }

            cart.forEach(item => {
                total += item.price * item.quantity;
                itemCount += item.quantity;

                cartItemsContainer.innerHTML += `
                    <div class="cart-item">
                        <div class="cart-item-details">
                            <img src="${item.img}" alt="${item.name}">
                            <div>
                                <div class="cart-item-title">${item.name}</div>
                                <div class="cart-item-price">$${item.price.toFixed(2)} x ${item.quantity}</div>
                            </div>
                        </div>
                        <strong>$${(item.price * item.quantity).toFixed(2)}</strong>
                    </div>
                `;
            });

            cartBadge.innerText = itemCount;
            cartTotal.innerText = `$${total.toFixed(2)}`;
        }

        // Toggle Cart Drawer
        function toggleCart(forceOpen = false) {
            const overlay = document.getElementById('cart-overlay');
            if (forceOpen) {
                overlay.classList.add('active');
            } else {
                overlay.classList.toggle('active');
            }
        }

        // Handle Order Submission via Email
        document.getElementById('checkout-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (cart.length === 0) {
                alert('Please add items to your cart before sending an order.');
                return;
            }

            const name = document.getElementById('customer-name').value;
            const phone = document.getElementById('customer-phone').value;
            let total = document.getElementById('cart-total').innerText;

            // Construct Email Body
            let emailBody = `New Order from ${name}\n`;
            emailBody += `Phone Number: ${phone}\n\n`;
            emailBody += `--- ORDER DETAILS ---\n`;
            
            cart.forEach(item => {
                emailBody += `- ${item.quantity}x ${item.name} ($${(item.price * item.quantity).toFixed(2)})\n`;
            });
            
            emailBody += `\nTotal Amount: ${total}\n\n`;
            emailBody += `Please confirm this order via phone or reply to this email.`;

            // Create mailto link
            const subject = encodeURIComponent(`New Shop Order - ${name}`);
            const body = encodeURIComponent(emailBody);
            const mailtoLink = `mailto:${OWNER_EMAIL}?subject=${subject}&body=${body}`;

            // Open user's default email client
            window.location.href = mailtoLink;

            // Optional: Clear cart after opening email
            cart = [];
            updateCartUI();
            toggleCart();
            document.getElementById('checkout-form').reset();
        });

        // Close cart when clicking outside the drawer
        document.getElementById('cart-overlay').addEventListener('click', function(e) {
            if (e.target === this) {
                toggleCart();
            }
        });

        // Start app
        initApp();
        updateCartUI();

    </script>
</body>
</html>
